{
  "name": "micro-signals",
  "version": "0.2.0",
  "description": "A tiny typed messaging system inspired by js-signals that uses ES2015 sets",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/tape": "^4.2.28",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.4",
    "rollup-plugin-typescript": "^0.8.1",
    "tape": "^4.6.0",
    "ts-node": "^1.2.1",
    "tslint": "^3.13.0",
    "typescript": "^2.0.7"
  },
  "scripts": {
    "test": "tslint \"src/**/*.ts\" && tape -r ts-node/register \"test/**/*.ts\"",
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "preversion": "npm install && npm test && npm run build",
    "postversion": "git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lelandmiller/micro-signals.git"
  },
  "keywords": [
    "signals",
    "eventer",
    "messaging",
    "pubsub"
  ],
